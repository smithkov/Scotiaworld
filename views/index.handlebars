<!-- slider start here -->
<div class="slide">
	<div id="owl-home" class="slideshow owl-carousel">
		{{#each banner}}
		<div style="height:350px" class="item">
			<img src="/uploads/{{this.path}}" alt="banner" title="banner" class="img-responsive" />
		</div>

		{{/each}}
	</div>

</div>
<!-- slider end here -->

<!-- service start here -->
<div class="service">
	<div class="container">
		<div class="row">
			<!-- aboutweek start here -->
			<div class="aboutweek">
				<div class="container">
					<div class="row">
						<div class="col-sm-12" style="border:1px solid #000; background-color:rgb(193, 193, 212)">
							<div style="text-align:center">
								<div class="row">
									<div class="col-lg-3"></div>
									<div class="col-lg-6">
										<h1 style="font-size:60px; text-align:center"><strong>Simple Process</strong>
										</h1>"... take full charge of your future"
									</div>
									<div class="col-lg-3">
										<button style="margin-top:15%" class="btn btn-primary"
											onclick="window.location.href = '/user/login';" id="btnReg"
											type="button">APPLY
											NOW</button>
									</div>
								</div>

							</div>
						</div>
					</div>
				</div>
			</div>
			<hr>

			<a href="/user/register">
				<div class="col-sm-2 col-xs-12 box text-center">
					<div class="icons">
						<div class="icon">
							<img src="/main_theme/images/user_awake.png" class="img-responsive" alt="icon"
								title="icon" />
						</div>
					</div>
					<h4>Create your account</h4>
				</div>
			</a>
			<a href="/courses">
				<div class="col-sm-2 col-xs-12 box text-center">
					<div class="icons">
						<div class="icon">
							<img src="/main_theme/images/notepad.png" class="img-responsive" alt="icon" title="icon" />
						</div>
					</div>
					<h4>Apply to preferred institution</h4>
				</div>
			</a>
			<a href="/dashboard">
				<div class="col-sm-2 col-xs-12 box text-center">
					<div class="icons">
						<div class="icon">
							<img src="/main_theme/images/binoculars2.png" class="img-responsive" alt="icon"
								title="icon" />
						</div>
					</div>
					<h4>Monitor your application</h4>
				</div>
			</a>
			<a href="/visa-application-guideline">
				<div class="col-sm-2 col-xs-12 box text-center">
					<div class="icons">
						<div class="icon">
							<img src="/main_theme/images/support.png" class="img-responsive" alt="icon" title="icon" />
						</div>
					</div>
					<h4>Visa guidance & application</h4>
				</div>
			</a>
			<a href="/pre-departure">
				<div class="col-sm-2 col-xs-12 box text-center">
					<div class="icons">
						<div class="icon">
							<img src="/main_theme/images/paper_plane.png" class="img-responsive" alt="icon"
								title="icon" />
						</div>
					</div>
					<h4>Pre-departure</h4>
				</div>
			</a>
			<a href="/about-scotland">
				<div class="col-sm-2 col-xs-12 box text-center">
					<div class="icons">
						<div class="icon">
							<img src="/main_theme/images/world_asia.png" class="img-responsive" alt="icon"
								title="icon" />
						</div>
					</div>
					<h4>Settle in Scotland</h4>
				</div>
			</a>
		</div>
	</div>
</div>
<!-- service end here -->

<!-- about start here -->
<div class="course">
	<div class="container">
		<div class="row">
			<div class="col-sm-12 col-xs-12">
				<div class="slider">
					{{#each schools}}
					<div><img src="/uploads/{{this.banner}}" title="{{this.name}}"></div>
					{{/each}}
				</div>
			</div>
		</div>
	</div>
</div>
<!-- about end here -->

<!-- courses start here -->
<div class="course">
	<div class="container">
		<div class="row">
			<div class="col-sm-12 col-xs-12">
				<div class="commontop text-center">
					<h2>{{best}}</h2>
					<!-- <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p> -->
					<hr>
				</div>
			</div>
			<div class="clearfix"></div>
			<div class="courses owl-carousel">
				{{#each data}}
				<div class="item">
					<div class="col-sm-12 col-xs-12">
						<div class="product-thumb">
							<div class="image">
								<a href="#">
									{{#if this.path}}
									<img style="height:190px" src="/uploads/{{this.path}}" class="img-responsive"
										alt="img" title="img" />
									{{else}}
									<img style="height:190px" src="/main_theme/images/course.png" class="img-responsive"
										alt="img" title="img" />
									{{/if}}
								</a>
							</div>
							<div class="caption">
								<h3><a
										href="/detail/{{this.Institution.name}}/{{this.name}}/{{this.id}}">{{this.Institution.name}}</a>
								</h3>
								<h3><strong>{{this.name}} </strong></h3>
								<h4 style="font-size:13px">{{this.institution.name}}</h4>
								<p></p>
								<ul class="list-inline">
									{{!-- <li>
										<a href="#"></i><strong>{{this.DegreeType.name}}</strong></a>
									</li> --}}

									<li><strong>{{this.fee}}</strong></li>
								</ul>
							</div>
						</div>
					</div>
				</div>
				{{/each}}
			</div>
		</div>
	</div>
</div>
<!-- courses end here -->

