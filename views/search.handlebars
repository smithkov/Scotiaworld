<!-- coures start here -->
<div class="coures">
	<div class="container">
		<div class="row">
			<div class="col-sm-3 col-xs-12 hidden-xs">

				<div class="left">
					<h4>POPULAR COURSES</h4>
					<div class="popular">
						{{#each data}}
						<a href="/detail/{{this.Institution.name}}/{{this.name}}/{{this.id}}">
							<div class="box">
								<img src="/main_theme/images/p1.jpg" class="img-responsive" alt="img" title="img" />
								<p>{{this.name}}</p>
								<span>Â£{{this.fee}}</span>
							</div>
						</a>
						{{/each}}
					</div>
				</div>
			</div>
			<div ng-controller="searchCtrl2" class="col-sm-9 col-xs-12 mainpage">
				<div class="col-sm-12 sort">
						<h3 style="text-align:center">ALL HIGHER INSTITUTIONS IN SCOTLAND</h3>
				</div>
				<div class="row">
					<div class="schoolDiv">

						<table id="example" class="table table-striped table-bordered" style="width:100%">
			        <thead>
			            <tr>
										  <th></th>
			                <th>School</th>
			                <th>City</th>
			                <th>Courses </th>
			            </tr>
			        </thead>
			        <tbody>
								{{#each schools}}
								<tr>
									  <td>
											{{#if this.path}}
											<img class="img-circle" src="/uploads/{{this.path}}" style="height:50px; width:50px"/>
											{{else}}
											<img class="img-circle" src="/noLogo.png" style="height:50px; width:50px"/>
											{{/if}}
										</td>
										<td><a href="school-faculties/{{this.name}}/{{this.id}}"><h4>{{this.name}}</h4></a></td>
										<td><h4>{{this.City.name}}</h4></td>
										<td><a href="school-faculties/{{this.name}}/{{this.id}}"><h4>View faculties</h4></a></td>
								</tr>
								{{/each}}
			        </tbody>
			    </table>
					</div>

				</div>
			</div>
		</div>
	</div>
</div>

<script>
$(document).ready(function() {

    $('#example').DataTable();
} );
</script>
<!-- coures end here -->
